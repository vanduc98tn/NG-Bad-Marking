<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow" WindowState="Maximized"
        Title="MainWindow" Height="900" Width="1300" WindowStartupLocation="CenterScreen">

    <Grid Background="#FFAAA9A9">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Style="{StaticResource backgroundGrid}">
            <Label x:Name="lblPLCTimeout" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20" FontWeight="Bold" Background="Yellow" Foreground="Red">CONNECT PLC TIME OUT!!!</Label>
        </Grid>
        <Grid Grid.Row="1" Background="#FF94BFB9">
            <Grid.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Background" Value="{StaticResource BrushGrid}">
                    </Setter>
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Foreground" Value="White" />
                </Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Margin" Value="0,0,0,0" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"></ColumnDefinition>
                <ColumnDefinition Width="80*"></ColumnDefinition>
                <ColumnDefinition Width="14*"></ColumnDefinition>
                <ColumnDefinition Width="14*"></ColumnDefinition>
                <ColumnDefinition Width="14*"></ColumnDefinition>
                <ColumnDefinition Width="14*"></ColumnDefinition>
                <ColumnDefinition Width="10*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <Image Margin="1,1,1,0" Grid.Row="0" Grid.Column="0" Source="/Resource/Image/logo.jpg" Stretch="Fill"></Image>
            <Grid Grid.Row="0" Grid.Column="1">
                <!--<Grid.Background>
                    <ImageBrush ImageSource="/Resource/Image/BackGround1.png"></ImageBrush>
                </Grid.Background>-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Label x:Name="lblNameMachine" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" FontSize="30" FontFamily="Vineta BT" FontWeight="Bold" Foreground="Black" FontStyle="Italic" >_LASER_BAD_MARKING</Label>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="1" Name="lblVersion" Grid.Column="0" Foreground="#063166" Background="Transparent"  HorizontalContentAlignment="Left" FontSize="16" FontWeight="Bold">Ver 1.0.1 [2023.12.11]</Label>
                    <Border Margin="1,1,1,0" Grid.Row="1" Grid.Column="1" Background="#66ccff" BorderBrush="Silver" BorderThickness="1" CornerRadius="8,8,0,0" >
                        <Border Margin="8,5,8,5" Background="#adc4e0" BorderBrush="Silver" BorderThickness="1" CornerRadius="8,8,8,8" Grid.Row="0" >
                            <Label  FontSize="20" Name="lblCurrentTime" Grid.Row="1" Grid.Column="1" Foreground="#063166" FontWeight="Bold" Background="Transparent" HorizontalContentAlignment="Left">2022.04.19 14:33:33</Label>
                        </Border>

                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2" Margin="3,3,3,3">
                <Button Style="{StaticResource ButtonMain50}" Name="btMain" >
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label x:Name="lbl_Main" FontSize="20" FontWeight="Medium"
                                Background="Transparent" FontFamily="Rockwell Extra Bold" VerticalContentAlignment="Center" Content="MAIN"/>
                        <Label FontFamily="Book Antiqua" VerticalContentAlignment="Center"  Content="Main Page" FontSize="10"  Background="Transparent"></Label>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="3" Margin="3,3,3,3">
                <Button Style="{StaticResource ButtonMain50}" Name="btMenu">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label x:Name="lbl_Menu" FontSize="20" FontWeight="Medium"
                                Background="Transparent" FontFamily="Rockwell Extra Bold" VerticalContentAlignment="Center" Content="MENU"/>
                        <Label FontFamily="Book Antiqua" Content="Main Menu" FontSize="10" Background="Transparent"></Label>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="4" Margin="3,3,3,3">
                <Button Style="{StaticResource ButtonMain50}" Name="btIO">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label x:Name="lbl_Setting" FontFamily="Rockwell Extra Bold" FontSize="20" FontWeight="Medium"
                                Background="Transparent" VerticalContentAlignment="Center" Content="I/O"/>
                        <Label FontFamily="Book Antiqua" Content="Input/ OutPut" FontSize="10" Background="Transparent"></Label>
                    </StackPanel>

                </Button>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="5" Margin="3,3,3,3">
                <Button Style="{StaticResource ButtonMain50}" Name="btLastJam">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label x:Name="lbl_Mes" FontSize="20" FontWeight="Medium"
                                Background="Transparent" FontFamily="Rockwell Extra Bold" VerticalContentAlignment="Center" Content="ALARM"/>
                        <Label FontFamily="Book Antiqua" Content="Last Jam" FontSize="10" Background="Transparent"></Label>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="8">
                <Label Background="Transparent"></Label>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="7">
                <Label Background="Transparent"></Label>
                <Button  Margin="30,10,30,10" Background="Transparent" BorderThickness="0" >

                </Button>
            </Grid>
            <Grid Grid.Row="0" Background="Transparent" Grid.Column="9">
                <Button  Name="btPower" Background="Transparent" BorderThickness="0">
                    <Button.Content>
                        <Image Source="/Resource/Image/power-button.png"></Image>
                    </Button.Content>
                </Button>
            </Grid>

        </Grid>

        <Frame Grid.Row="2" x:Name="mainContent" Margin="0,0,0,0">
        </Frame>
    </Grid>
    
</Window>

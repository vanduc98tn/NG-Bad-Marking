<Window x:Class="GUI.WndRetryVacuumAtCentering"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:PLC="clr-namespace:DevicePLC;assembly=DevicePLC"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Confirm Message" Height="200" Width="450">
    <UniformGrid Rows="3">
        <Label Name="lblMessage" Foreground="Red" FontSize="20"
           HorizontalContentAlignment="Center" FontFamily="Rockwell Extra Bold" VerticalContentAlignment="Center" FontWeight="Bold">Vacuum Centering không đạt</Label>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="5">
                <PLC:RectangleLamp
                    DeviceLamp="M" AddressLamp="3372"
                    IsShowInWindow="True"
                    IsTabItem="False"
                    Background="LightGray"
                    BackgroundLampOFF="Red" 
                    BackgroundLampON="LightGreen"
                    TextON="Centering 1"
                    TextOFF="Centering 1">
                </PLC:RectangleLamp>
            </Grid>
            <Grid Grid.Column="1" Margin="5">
                <PLC:RectangleLamp
                    DeviceLamp="M" AddressLamp="3373"
                    IsShowInWindow="True"
                    IsTabItem="False"
                    Background="LightGray"
                    BackgroundLampOFF="Red" 
                    BackgroundLampON="LightGreen"
                    TextON="Centering 2"
                    TextOFF="Centering 2">
                </PLC:RectangleLamp>
            </Grid>
            <Grid Grid.Column="2" Margin="5">
                <PLC:RectangleLamp
                    DeviceLamp="M" AddressLamp="3374"
                    IsShowInWindow="True"
                    IsTabItem="False"
                    Background="LightGray"
                    BackgroundLampOFF="Red" 
                    BackgroundLampON="LightGreen"
                    TextON="Centering 3"
                    TextOFF="Centering 3">
                </PLC:RectangleLamp>
            </Grid>
            <Grid Grid.Column="3" Margin="5">
                <PLC:RectangleLamp
                    DeviceLamp="M" AddressLamp="3375"
                    IsShowInWindow="True"
                    IsTabItem="False"
                    Background="LightGray"
                    BackgroundLampOFF="Red" 
                    BackgroundLampON="LightGreen"
                    TextON="Centering 4"
                    TextOFF="Centering 4">
                </PLC:RectangleLamp>
            </Grid>
        </Grid>
        <Grid Background="DodgerBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <PLC:PLCButton
                 Grid.Column="0"
                 Margin="11"
                IsShowInWindow="True"
                 IsTabItem="False"
                 Action="Momentary"
                 DeviceWrite="M" AddressWrite="464"
                 UseLampCodition="True"
                 DeviceLamp="M" AddressLamp="464"
                 Background="LightGray"
                 BackgroundLampOFF="LightGray"
                 BackgroundLampON="AliceBlue"
                 TextOFF="Retry"
                 TextON="Retry"
                 Content="Retry"
                 Foreground="Black"
                 FontSize="12">
            </PLC:PLCButton>
            <PLC:PLCButton
                 Grid.Column="1"
                 Margin="11"
                 IsTabItem="False"
                IsShowInWindow="True"
                 Action="Momentary"
                 DeviceWrite="M" AddressWrite="465"
                 UseLampCodition="True"
                 DeviceLamp="M" AddressLamp="465"
                 Background="LightGray"
                 BackgroundLampOFF="LightGray"
                 BackgroundLampON="AliceBlue"
                 TextOFF="Skip"
                 TextON="Skip"
                 Content="Skip"
                 Foreground="Black"
                 FontSize="12">
            </PLC:PLCButton>
        </Grid>
    </UniformGrid>
</Window>

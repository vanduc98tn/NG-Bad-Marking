<Window x:Class="GUI.WndLotIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="WndLotIn" WindowStartupLocation="CenterScreen" Height="300" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFA0CCE0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25" FontFamily="Elephant">LOT IN DATA</Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label FontFamily="Bodoni MT Black" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0" Foreground="White">WORK GROUP</Label>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtWorkGroup" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"></TextBox>
            <Label FontFamily="Bodoni MT Black" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="0" Foreground="White">DEVICE ID</Label>
            <TextBox HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" x:Name="txtDeviceId">
                <TextBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="ApplicationCommands.Paste" CommandTarget="{Binding ElementName=myTextBox}" IsEnabled="False"/>
                    </ContextMenu>
                </TextBox.ContextMenu>
            </TextBox>
            <Label FontFamily="Bodoni MT Black" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="0" Foreground="White">LOT ID</Label>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                <TextBox VerticalContentAlignment="Center" x:Name="txtLotId" Width="150" HorizontalContentAlignment="Left">
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="ApplicationCommands.Paste" CommandTarget="{Binding ElementName=myTextBox}" IsEnabled="False"/>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>
                <TextBlock Foreground="White" FontSize="10" VerticalAlignment="Center" Text="UnLimit" FontFamily="Arial Rounded MT Bold"></TextBlock>
            </StackPanel>
            <Label FontFamily="Bodoni MT Black" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="0" Foreground="White">LOT QTY</Label>
            <TextBox HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="1" x:Name="txtLotQty"></TextBox>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOK" Grid.Column="0" FontFamily="Bodoni MT Black" Content="OK" Margin="2" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                
            </Button>
            <Button x:Name="btnCancel" Grid.Column="1" FontFamily="Bodoni MT Black" Content="CANCEL" Margin="2" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Window>

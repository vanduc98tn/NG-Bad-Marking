<Window x:Class="GUI.WndPatern"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="WndPatern" Height="320" Width="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label FontSize="20" FontWeight="Bold" Margin="1,1,1,1" Background="DeepSkyBlue" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">SELECTION PATTERN</Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="LightBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <RadioButton x:Name="rdbPatern1" BorderThickness="1" BorderBrush="Black" Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/1.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern2" BorderThickness="1" BorderBrush="Black" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/2.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern3" BorderThickness="1" BorderBrush="Black" Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/3.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern4" BorderThickness="1" BorderBrush="Black" Grid.Row="0" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/4.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern5" BorderThickness="1" BorderBrush="Black" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/5.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern6" BorderThickness="1" BorderBrush="Black" Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/6.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern7" BorderThickness="1" BorderBrush="Black" Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/7.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern8" BorderThickness="1" BorderBrush="Black" Grid.Row="1" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/8.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern9" BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/9.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern10" BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/10.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern11" BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/11.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern12" BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/12.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern13" BorderThickness="1" BorderBrush="Black" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/13.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern14" BorderThickness="1" BorderBrush="Black" Grid.Row="3" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/14.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern15" BorderThickness="1" BorderBrush="Black" Grid.Row="3" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/15.PNG" Stretch="Fill"></Image>
                </RadioButton>
                <RadioButton x:Name="rdbPatern16" BorderThickness="1" BorderBrush="Black" Grid.Row="3" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Margin="2,2,2,2" Source="/Resource/Image/16.PNG" Stretch="Fill"></Image>
                </RadioButton>
            </Grid>
            <Grid Grid.Column="1" Background="DarkCyan">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="0.9*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Background="LightCoral" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontWeight="Bold">Pitch X</Label>
                <Label Background="LightCoral" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontWeight="Bold">Pitch Y</Label>
                <Label Background="LightCoral" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontWeight="Bold">Row</Label>
                <Label Background="LightCoral" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontWeight="Bold">Column</Label>
                <Label Background="LightCoral" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="4" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontWeight="Bold">Offset X</Label>
                <Label Background="LightCoral" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="5" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontWeight="Bold">Offset Y</Label>
                <Label Background="LightCoral" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="6" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontWeight="Bold">Use2Matrix</Label>
                <TextBox Background="LightCyan" x:Name="txtPitchX" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold">0</TextBox>
                <TextBox Background="LightCyan" x:Name="txtPitchY" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold">0</TextBox>
                <TextBox Background="LightCyan" x:Name="txtRow" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold">0</TextBox>
                <TextBox Background="LightCyan" x:Name="txtColumn" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold">0</TextBox>
                <TextBox Background="LightCyan" x:Name="txtOffsetX" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" Grid.Row="4" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold">0</TextBox>
                <TextBox Background="LightCyan" x:Name="txtOffsetY" Margin="2,2,2,0" BorderBrush="Black" BorderThickness="1" Grid.Row="5" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Height="25" VerticalAlignment="Top">0</TextBox>
                <CheckBox Background="LightCyan" x:Name="cb2Matrix" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"> </CheckBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnSave" FontSize="20" Foreground="DodgerBlue" FontWeight="Bold" Margin="1,1,1,1" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">SAVE</Button>
            <Button x:Name="btnCancle" FontSize="20" Foreground="OrangeRed" FontWeight="Bold" Margin="1,1,1,1" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">CANCLE</Button>
        </Grid>
    </Grid>
</Window>

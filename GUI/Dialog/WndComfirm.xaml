<Window x:Class="GUI.WndComfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Confirm Message" Height="200" Width="450">
    <UniformGrid Rows="2">
        <Label Name="lblMessage" Foreground="Red" FontSize="20"
               HorizontalContentAlignment="Center" FontFamily="Rockwell Extra Bold" VerticalContentAlignment="Center" FontWeight="Bold">message</Label>

        <Grid Background="DodgerBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Background="Transparent" BorderThickness="0" x:Name="btYes" Grid.Column="0" Foreground="Blue">
                <Image Source="/Resource/Image/ok.png"></Image>
            </Button>
            <Button Background="Transparent" BorderThickness="0" x:Name="btNo" Grid.Column="1" Foreground="Red">
                <Image Source="/Resource/Image/No.png"></Image>
            </Button>
        </Grid>
    </UniformGrid>
</Window>

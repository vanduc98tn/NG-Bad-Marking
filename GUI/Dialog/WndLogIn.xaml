<Window x:Class="GUI.WndLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="WndLogIn" Height="450" Width="520" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF15F7EE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="1" Source="/Resource/Image/Login.png"></Image>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <ComboBox x:Name="cboUserName" Margin="2" Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                <ComboBox.Background>
                    <SolidColorBrush Color="Transparent"/>
                </ComboBox.Background>
                <ComboBoxItem FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Manager</ComboBoxItem>
                <ComboBoxItem FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Operator</ComboBoxItem>
                <ComboBoxItem FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">AutoTeams</ComboBoxItem>
            </ComboBox>
            <Label Grid.Row="0" VerticalContentAlignment="Center" Foreground="White" FontSize="20">User Name:</Label>
            <Label Grid.Row="1" VerticalContentAlignment="Center" Foreground="White" FontSize="20">Password:</Label>
            <Button x:Name="btnEnter" Width="50" BorderBrush="Transparent" Background="Transparent" Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="20">Enter</Button>
            <Button x:Name="btnChangePassword" BorderBrush="Transparent" Background="Transparent" Grid.Row="3" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="20">Change The Password?</Button>
            <PasswordBox x:Name="txtPassword" GotFocus="txtPassword_GotFocus" PasswordChar="*" Grid.Row="1" Grid.Column="1" FontSize="20" BorderBrush="Black" BorderThickness="0,0,0,1" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Background="Transparent"></PasswordBox>
            
            <!--<Image VerticalAlignment="Bottom" Height="17" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="1" Source="/Resource/Image/eyeLogin.png"></Image>-->
            <!--<Button x:Name="btnEye" Grid.Column="2" Grid.Row="1" VerticalAlignment="Bottom" Height="17" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Transparent">
                <Image VerticalAlignment="Bottom" Height="17" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="1" Source="/Resource/Image/eyeLogin.png"></Image>
            </Button>-->
        </Grid>

    </Grid>
</Window>

<Window x:Class="GUI.wndJigOffline"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="LOT END - POCKET STATUS" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Foreground="DarkOrange" Background="#f0f000"
               FontWeight="Bold" FontSize="20">AOI OFFLINE DATA SETTING</Label>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,5,0" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Label>Remain =</Label>
            <Label x:Name="lblRemain" Padding="0" VerticalContentAlignment="Center">0</Label>
        </StackPanel>
        <!--<Label Grid.Row="0" HorizontalAlignment="Right" VerticalContentAlignment="Bottom" Margin="0,0,50,0">Remain = </Label>
        <Label Grid.Row="0" HorizontalAlignment="Right" VerticalContentAlignment="Bottom" Margin="0,0,0,0">30</Label>-->

        <Border Grid.Row="1" Margin="10,5,10,0" BorderThickness="0" BorderBrush="Gray">
            <Grid x:Name="gridSelections"></Grid>
        </Border>

        <Button Grid.Row="2" x:Name="btClose" Width="180" Margin="0,5,0,5" FontWeight="Bold">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resource/Image/ok.png" Height="32" Width="32" Stretch="UniformToFill"/>
                <TextBlock FontSize="20" Margin="10,0,0,0" VerticalAlignment="Center">OK</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="2" x:Name="btCancel" Width="120" Margin="0,5,10,5" Foreground="Red"
                HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resource/Image/No.png" Height="32" Width="32" Stretch="UniformToFill"/>
                <TextBlock FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center">CANCEL</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
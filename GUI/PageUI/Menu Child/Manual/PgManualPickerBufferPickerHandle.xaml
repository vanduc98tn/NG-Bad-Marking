<Page x:Class="GUI.PgManualPickerBufferPickerHandle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d"
      xmlns:PLC="clr-namespace:DevicePLC;assembly=DevicePLC"
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="PgManualPickerBufferPickerHandle">

    <Grid Background="#dddddd">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="6*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="DarkOrange">
                    <Label Grid.Column="0" Foreground="#EEEEEE" FontSize="20" FontWeight="Bold"
                        Margin="20,0,0,0" VerticalContentAlignment="Top">
                        Manual Buffer / Picker Handle
                    </Label>
                </Grid>
                <Grid Grid.Row="1">
                    
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        FontSize="25"
                        Style="{StaticResource LabelHeader}"
                        Background="#FF74A8A1"
                        FontFamily="Elephant">MENU</Label>
                <Grid Grid.Row="1">
                    <local:ButtonMechanical Foreground="Black" Background="White" DeviceButton="PAGE_MENU_MANUAL_PICKER_TRANSFER">
                        <local:ButtonMechanical.Content>CONTROL JIG</local:ButtonMechanical.Content>
                        
                    </local:ButtonMechanical>
                </Grid>
                <Grid Grid.Row="2">
                    <local:ButtonMechanical Foreground="Black" Background="#FF70E6E6" DeviceButton="PAGE_MENU_MANUAL_BUFFER_PICKER_HANDLE">
                        <local:ButtonMechanical.Content>CONVEYOR</local:ButtonMechanical.Content>
                        <local:ButtonMechanical.Style>
                            <Style TargetType="local:ButtonMechanical">
                                <Setter Property="RectangleFill" Value="DarkRed" />
                            </Style>
                        </local:ButtonMechanical.Style>
                    </local:ButtonMechanical>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Border CornerRadius="8" BorderThickness="1" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition Height="7*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Margin="0,0,0,0" Background="#FF3DFF72" HorizontalAlignment="Center" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                            <StackPanel>
                                <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="Black" Content="Conveyor Control." FontSize="15" Width="135"></Label>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <PLC:PLCButton
                    Grid.Column="0"
                    Margin="4,10,4,10"
                    Action="Set"
                    DeviceWrite="M" AddressWrite="1608"
                    DeviceLamp="M" AddressLamp="114"
                    UseLampCodition="True"
                    BackgroundLampOFF="Gray"
                    BackgroundLampON="GreenYellow"
                    Background="Gray"
                    TextON="Conveyor ON"
                    TextOFF="Conveyor ON"
                    Content="Conveyor ON">
                            </PLC:PLCButton>
                            <PLC:PLCButton
                    Grid.Column="1"
                    Margin="4,10,4,10"
                    Action="Set"
                    DeviceWrite="M" AddressWrite="1609"
                    DeviceLamp="M" AddressLamp="114"
                    UseLampCodition="True"
                    BackgroundLampOFF="Red"
                    BackgroundLampON="Gray"
                    Background="Red"
                    TextON="Conveyor OFF"
                    TextOFF="Conveyor OFF"
                    Content="Conveyor OFF">
                            </PLC:PLCButton>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.2*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <PLC:RectangleLamp
                        Grid.Row="0"
                        Margin="4,0,4,0"
                        DeviceLamp="M" AddressLamp="59"
                        BackgroundLampOFF="LightGray"
                        BackgroundLampON="Red"
                        Background="LightGray">
                                </PLC:RectangleLamp>
                                <PLC:PLCButton
                        Grid.Row="1"
                        Margin="4,0,4,10"
                        Action="Set"
                        DeviceWrite="M" AddressWrite="1606"
                        DeviceLamp="M" AddressLamp="123"
                        UseLampCodition="True"
                        BackgroundLampOFF="Gray"
                        BackgroundLampON="GreenYellow"
                        Background="Gray"
                        TextON="Stopper Up"
                        TextOFF="Stopper Up"
                        Content="Stopper Up">
                                </PLC:PLCButton>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.2*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <PLC:RectangleLamp
                        Grid.Row="0"
                        Margin="4,0,4,0"
                        DeviceLamp="M" AddressLamp="60"
                        BackgroundLampOFF="LightGray"
                        BackgroundLampON="Red"
                        Background="LightGray">
                                </PLC:RectangleLamp>
                                <PLC:PLCButton
                        Grid.Row="1"
                        Margin="4,0,4,10"
                        Action="Set"
                        DeviceWrite="M" AddressWrite="1607"
                        DeviceLamp="M" AddressLamp="124"
                        UseLampCodition="True"
                        BackgroundLampOFF="Gray"
                        BackgroundLampON="GreenYellow"
                        Background="Gray"
                        TextON="Stopper Down"
                        TextOFF="Stopper Down"
                        Content="Stopper Down">
                                </PLC:PLCButton>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.2*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <PLC:PLCButton
                        Grid.Row="1"
                        Margin="4,0,4,10"
                        Action="Set"
                        DeviceWrite="M" AddressWrite="1625"
                        DeviceLamp="M" AddressLamp="127"
                        UseLampCodition="True"
                        BackgroundLampOFF="Gray"
                        BackgroundLampON="GreenYellow"
                        Background="Gray"
                        TextON="Centering FW"
                        TextOFF="Centering FW"
                        Content="Centering FW">
                                </PLC:PLCButton>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.2*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <PLC:PLCButton
                        Grid.Row="1"
                        Margin="4,0,4,10"
                        Action="Set"
                        DeviceWrite="M" AddressWrite="1626"
                        DeviceLamp="M" AddressLamp="127"
                        UseLampCodition="True"
                        BackgroundLampOFF="GreenYellow"
                        BackgroundLampON="Gray"
                        Background="GreenYellow"
                        TextON="Centering BW"
                        TextOFF="Centering BW"
                        Content="Centering BW">
                                </PLC:PLCButton>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>

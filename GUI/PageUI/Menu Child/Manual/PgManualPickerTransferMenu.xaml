<Page x:Class="GUI.PgManualPickerTransferMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d"
      xmlns:PLC="clr-namespace:DevicePLC;assembly=DevicePLC"
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="PgManualPickerTransferMenu">

    <Grid Background="#dddddd">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="6*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="DarkOrange">
                    <Label Grid.Column="0" Foreground="#EEEEEE" FontSize="20" FontWeight="Bold"
                        Margin="20,0,0,0" VerticalContentAlignment="Top">
                        Manual Picker Transfer
                    </Label>
                </Grid>
                <Grid Grid.Row="1">
                    
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        FontSize="25"
                        Style="{StaticResource LabelHeader}"
                        Background="#FF74A8A1"
                        FontFamily="Elephant">MENU</Label>
                <Grid Grid.Row="1">
                    <local:ButtonMechanical Foreground="Black" Background="#FF70E6E6" DeviceButton="PAGE_MENU_MANUAL_PICKER_TRANSFER">
                        <local:ButtonMechanical.Content>CONTROL JIG</local:ButtonMechanical.Content>
                        <local:ButtonMechanical.Style>
                            <Style TargetType="local:ButtonMechanical">
                                <Setter Property="RectangleFill" Value="DarkRed" />
                            </Style>
                        </local:ButtonMechanical.Style>
                    </local:ButtonMechanical>
                </Grid>
                <Grid Grid.Row="2">
                    <local:ButtonMechanical Foreground="Black" Background="White" DeviceButton="PAGE_MENU_MANUAL_BUFFER_PICKER_HANDLE">
                        <local:ButtonMechanical.Content>CONVERYOR</local:ButtonMechanical.Content>
                    </local:ButtonMechanical>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="2" Background="#FFD6E6E6">
                <Border CornerRadius="8" BorderThickness="1" BorderBrush="Black">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition Height="7*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Border Margin="0,0,0,0" Background="#FF3DFF72" HorizontalAlignment="Center" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                <StackPanel>
                                    <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="Black" Content="JIG Control." FontSize="15" Width="135"></Label>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.2*"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <PLC:RectangleLamp
                            Grid.Row="0"
                            Margin="4,0,4,0"
                            DeviceLamp="M" AddressLamp="53"
                            BackgroundLampOFF="LightGray"
                            BackgroundLampON="Red"
                            Background="LightGray">
                                    </PLC:RectangleLamp>
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1600"
                            DeviceLamp="M" AddressLamp="118"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="Transfer FW"
                            TextOFF="Transfer FW"
                            Content="Transfer FW">
                                    </PLC:PLCButton>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.2*"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <PLC:RectangleLamp
                            Grid.Row="0"
                            Margin="4,0,4,0"
                            DeviceLamp="M" AddressLamp="54"
                            BackgroundLampOFF="LightGray"
                            BackgroundLampON="Red"
                            Background="LightGray">
                                    </PLC:RectangleLamp>
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1601"
                            DeviceLamp="M" AddressLamp="119"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="Transfer BW"
                            TextOFF="Transfer BW"
                            Content="Transfer BW">
                                    </PLC:PLCButton>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.2*"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <PLC:RectangleLamp
                            Grid.Row="0"
                            Margin="4,0,4,0"
                            DeviceLamp="M" AddressLamp="55"
                            BackgroundLampOFF="LightGray"
                            BackgroundLampON="Red"
                            Background="LightGray">
                                    </PLC:RectangleLamp>
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1602"
                            DeviceLamp="M" AddressLamp="401"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="Transfer UP"
                            TextOFF="Transfer UP"
                            Content="Transfer UP">
                                    </PLC:PLCButton>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.2*"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <PLC:RectangleLamp
                            Grid.Row="0"
                            Margin="4,0,4,0"
                            DeviceLamp="M" AddressLamp="56"
                            BackgroundLampOFF="LightGray"
                            BackgroundLampON="Red"
                            Background="LightGray">
                                    </PLC:RectangleLamp>
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1603"
                            DeviceLamp="M" AddressLamp="120"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="Transfer Down"
                            TextOFF="Transfer Down"
                            Content="Transfer Down">
                                    </PLC:PLCButton>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.2*"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <PLC:RectangleLamp
                            Grid.Row="0"
                            Margin="4,0,4,0"
                            DeviceLamp="M" AddressLamp="57"
                            BackgroundLampOFF="LightGray"
                            BackgroundLampON="Red"
                            Background="LightGray">
                                    </PLC:RectangleLamp>
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1604"
                            DeviceLamp="M" AddressLamp="121"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="Rotary FW"
                            TextOFF="Rotary FW"
                            Content="Rotary FW">
                                    </PLC:PLCButton>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.2*"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <PLC:RectangleLamp
                            Grid.Row="0"
                            Margin="4,0,4,0"
                            DeviceLamp="M" AddressLamp="58"
                            BackgroundLampOFF="LightGray"
                            BackgroundLampON="Red"
                            Background="LightGray">
                                    </PLC:RectangleLamp>
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1605"
                            DeviceLamp="M" AddressLamp="122"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="Rotary BW"
                            TextOFF="Rotary BW"
                            Content="Rotary BW">
                                    </PLC:PLCButton>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Column="1" Margin="2" Background="#FFD6E6E6">
                <Border CornerRadius="8" BorderThickness="1" BorderBrush="Black">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition Height="7*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Border Margin="0,0,0,0" Background="#FF3DFF72" HorizontalAlignment="Center" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                <StackPanel>
                                    <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="Black" Content="Vacuum." FontSize="15" Width="135"></Label>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.2*"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <PLC:RectangleLamp
                            Grid.Row="0"
                            Margin="4,0,4,0"
                            DeviceLamp="M" AddressLamp="52"
                            BackgroundLampOFF="LightGray"
                            BackgroundLampON="Red"
                            Background="LightGray">
                                    </PLC:RectangleLamp>
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1618"
                            DeviceLamp="M" AddressLamp="116"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="Vacuum"
                            TextOFF="Vacuum"
                            Content="Vacuum">
                                    </PLC:PLCButton>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid Grid.Column="1">
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1620"
                            DeviceLamp="M" AddressLamp="117"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="Blower"
                            TextOFF="Blower"
                            Content="Blower">
                                    </PLC:PLCButton>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid Grid.Column="0">
                                    <PLC:PLCButton
                            Grid.Row="1"
                            Margin="4,0,4,10"
                            Action="Set"
                            DeviceWrite="M" AddressWrite="1619"
                            DeviceLamp="M" AddressLamp="1619"
                            UseLampCodition="True"
                            BackgroundLampOFF="Gray"
                            BackgroundLampON="GreenYellow"
                            Background="Gray"
                            TextON="OFF"
                            TextOFF="OFF"
                            Content="OFF">
                                    </PLC:PLCButton>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>

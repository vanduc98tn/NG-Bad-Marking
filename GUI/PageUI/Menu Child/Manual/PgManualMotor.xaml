    <Grid Background="#dddddd">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="6*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="DarkOrange">
                    <Label Grid.Column="0" Foreground="#EEEEEE" FontSize="20" FontWeight="Bold"
                        Margin="20,0,0,0" VerticalContentAlignment="Top">
                        Manual Motor
                    </Label>
                </Grid>
                <Grid Grid.Row="1">
                    
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        FontSize="25"
                        Style="{StaticResource LabelHeader}"
                        Background="#FF74A8A1"
                        FontFamily="Elephant">MENU</Label>
                <Grid Grid.Row="1">
                    <local:ButtonMechanical Foreground="Black" Background="White" DeviceButton="PAGE_MENU_MANUAL_PICKER_TRANSFER">
                        <local:ButtonMechanical.Content>Picker Transfer</local:ButtonMechanical.Content>
                    </local:ButtonMechanical>
                </Grid>
                <Grid Grid.Row="2">
                    <local:ButtonMechanical Foreground="Black" Background="White" DeviceButton="PAGE_MENU_MANUAL_BUFFER_PICKER_HANDLE">
                        <local:ButtonMechanical.Content>Buffer/Picker Handle</local:ButtonMechanical.Content>
                    </local:ButtonMechanical>
                </Grid>
                <Grid Grid.Row="3">
                    <local:ButtonMechanical Foreground="Black" Background="#FF70E6E6" DeviceButton="PAGE_MENU_MANUAL_MOTOR">
                        <local:ButtonMechanical.Content>Motor</local:ButtonMechanical.Content>
                        <local:ButtonMechanical.Style>
                            <Style TargetType="local:ButtonMechanical">
                                <Setter Property="RectangleFill" Value="DarkRed" />
                            </Style>
                        </local:ButtonMechanical.Style>
                    </local:ButtonMechanical>
                </Grid>
                <Grid Grid.Row="4">
                    <local:ButtonMechanical Foreground="Black" Background="White" DeviceButton="PAGE_MENU_MANUAL_CENTERING">
                        <local:ButtonMechanical.Content>Centering</local:ButtonMechanical.Content>
                    </local:ButtonMechanical>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">

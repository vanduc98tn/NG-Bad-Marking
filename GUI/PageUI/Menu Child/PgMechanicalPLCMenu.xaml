<Page x:Class="GUI.PgMechanicalPLCMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="PgMechanicalMenu">

    <Grid>
        
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFB3FBFB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Label Content="DEVICE" 
                       Style="{StaticResource LabelHeader}"
                       HorizontalContentAlignment="Left"
                       FontFamily="Gill Sans Ultra Bold">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF29E8DF" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                    <Label.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Gray" Direction="315" BlurRadius="5" Opacity="0.7" />
                    </Label.Effect>
                </Label>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1.2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Foreground="Black" Content="Logs" Background="White">
                    </Label>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="54" />
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="txtLogs" Text="{Binding rxLog}" Background="Black" Foreground="White"
                             VerticalScrollBarVisibility="Visible"></TextBox>
                        <Button Grid.Row="1" Name="btLogClear" Style="{StaticResource ButtonHeader}" Margin="2,2,2,2"  Content="Clear">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FF3399FF" Offset="0"/>
                                    <GradientStop Color="#FF0055AA" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1.2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image  Grid.Column="0" Source="/Resource/Image/PLC.png"></Image>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Label Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF5C5CCB" FontSize="20" Foreground="Yellow">Config</Label>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btnSave" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="Black"/>
                                                <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resource/Image/menu-mechanic.png"/>
                                            <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Save</TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="btnOpen" Grid.Column="1" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="Black" Offset="0"/>
                                                <GradientStop Color="#FF5BD1B1" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resource/Image/connect_icon.png"/>
                                            <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">OPEN</TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="btnClose" Grid.Column="1" Grid.Row="1" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="Black" Offset="0"/>
                                                <GradientStop Color="#FF5BD1B1" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resource/Image/Disconnect.png"/>
                                            <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Close</TextBlock>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Margin="1" Grid.Row="0" Grid.Column="0">
                                        <ComboBox HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0"  x:Name="cbSelectDeviceType" SelectedValuePath="Content">
                                            <ComboBoxItem Tag="ModbusRTU">ModbusRTU</ComboBoxItem>
                                            <ComboBoxItem Tag="ModbusTCP">ModbusTCP</ComboBoxItem>
                                            <ComboBoxItem Tag="XGTLS">XGTLS</ComboBoxItem>
                                            <ComboBoxItem Tag="MCProtocolBinarySerial">MCProtocolBinarySerial</ComboBoxItem>
                                            <ComboBoxItem Tag="MCProtocolAsciiSerial">MCProtocolAsciiSerial</ComboBoxItem>
                                            <ComboBoxItem Tag="MCProtocolBinaryEthernet">MCProtocolBinaryEthernet</ComboBoxItem>
                                            <ComboBoxItem Tag="MCProtocolAsciiEthernet">MCProtocolAsciiEthernet</ComboBoxItem>
                                        </ComboBox>
                                    </Grid>
                                    <Grid Margin="1" Grid.Row="1" Grid.Column="0">
                                        <Button x:Name="btnSettingDevice">
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="Black"/>
                                                    <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Resource/Image/menu-mechanic.png"/>
                                                <TextBlock FontSize="16" FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Setting Device</TextBlock>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Label Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF5C5CCB" FontSize="20" Foreground="Yellow">Funtion</Label>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnReadBit" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Read Bit</TextBlock>
                                    </StackPanel>
                                </Button>
                                <TextBox x:Name="txtAddressReadBit" FontSize="16" FontWeight="Bold" Margin="2" Background="White" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">0</TextBox>
                                <Button x:Name="btnWriteBit" Grid.Column="0" Grid.Row="1" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Write Bit</TextBlock>
                                    </StackPanel>
                                </Button>
                                <ComboBox x:Name="cboValueWriteBit" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="2">
                                    <ComboBoxItem FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">false</ComboBoxItem>
                                    <ComboBoxItem FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">true</ComboBoxItem>
                                </ComboBox>
                                <Button x:Name="btnReadWord" Grid.Column="0" Grid.Row="2" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Read Word</TextBlock>
                                    </StackPanel>
                                </Button>
                                <TextBox x:Name="txtAddressReadWord" FontSize="16" FontWeight="Bold" Margin="2" Background="White" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">0</TextBox>
                                <Button x:Name="btnWriteWord" Grid.Column="0" Grid.Row="3" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Write Word</TextBlock>
                                    </StackPanel>
                                </Button>
                                <TextBox x:Name="txtValueWriteWord" FontSize="16" FontWeight="Bold" Margin="2" Background="White" Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="#FFB9EAEA">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   FontSize="25"
                   Style="{StaticResource LabelHeader}"
                   Background="#FF74A8A1"
                   FontFamily="Elephant">MENU</Label>
            <Grid Grid.Row="1">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_DELAY_TIME">
                    <local:ButtonMechanical.Content>DELAY TIME</local:ButtonMechanical.Content>
                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="2">
                <local:ButtonMechanical Background="#FF70E6E6" DeviceButton="PAGE_MENU_MECHANICAL_DEVICE">
                    <local:ButtonMechanical.Content>DEVICE</local:ButtonMechanical.Content>
                    <local:ButtonMechanical.Style>
                        <Style TargetType="local:ButtonMechanical">
                            <Setter Property="RectangleFill" Value="DarkRed" />
                        </Style>
                    </local:ButtonMechanical.Style>
                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="3">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_AOI">
                    <local:ButtonMechanical.Content>MES</local:ButtonMechanical.Content>
                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="4">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_BARCODE">
                    <local:ButtonMechanical.Content>BARCODE</local:ButtonMechanical.Content>
                </local:ButtonMechanical>
            </Grid>
        </Grid>
    </Grid>
</Page>

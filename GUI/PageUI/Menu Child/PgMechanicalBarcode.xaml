<Page x:Class="GUI.PgMechanicalBarcode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      xmlns:device="clr-namespace:DevicePLC;assembly=DevicePLC"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1300"
      Title="PgMechanicalMenu">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFB3FBFB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style x:Key="lableName" TargetType="Label">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
            <Style x:Key="lableNo" TargetType="Label">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
            <Style x:Key="lableType" TargetType="Label">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
            <Style x:Key="lableUnit" TargetType="Label">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
        </Grid.Resources>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF29E8DF" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="70"></ColumnDefinition>
                    <ColumnDefinition Width="70"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="BARCODE SETTING" 
                       Style="{StaticResource LabelHeader}"
                       HorizontalContentAlignment="Left"
                       FontFamily="Gill Sans Ultra Bold">
                    <Label.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Gray" Direction="315" BlurRadius="5" Opacity="0.7" />
                    </Label.Effect>
                </Label>
                <Button x:Name="btnSave" Grid.Column="1" HorizontalContentAlignment="Center" BorderThickness="1" BorderBrush="Transparent" Background="Transparent" VerticalContentAlignment="Center">
                    <Image Source="/Resource/Image/menu-save.png"></Image>
                </Button>
                <Button x:Name="btnRestore" Grid.Column="2" HorizontalContentAlignment="Center" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center">
                    <Image Source="/Resource/Image/continue.png"></Image>
                </Button>
            </Grid>
            <Grid Grid.Row="1" Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Image Stretch="Fill" Source="/Resource/Image/scanner.jpg"></Image>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="45" />
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="txtLogs" Text="{Binding rxLog}" Background="Black" Foreground="White"
                             VerticalScrollBarVisibility="Visible"></TextBox>
                        <Button Grid.Row="1" Name="btLogClear" Style="{StaticResource ButtonHeader}" Margin="2,2,2,0"  Content="Clear">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FF3399FF" Offset="0"/>
                                    <GradientStop Color="#FF0055AA" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="2" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnSetting" Grid.Column="0" Background="Transparent" BorderBrush="Transparent" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                <StackPanel Orientation="Horizontal">
                                    <Image  Source="/Resource/Image/menu-mechanic.png"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnOpen" Grid.Column="1" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FF5BD1B1" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resource/Image/connect_icon.png"/>
                                    <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">OPEN</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnClose" Grid.Column="2" Grid.Row="1" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FF5BD1B1" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resource/Image/Disconnect.png"/>
                                    <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Close</TextBlock>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <Grid Grid.Column="0" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label HorizontalContentAlignment="Center" FontSize="16" VerticalContentAlignment="Center">Select Bank</Label>
                            <ComboBox Margin="2,7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Grid.Column="1"  x:Name="cbSelectBank" SelectedValuePath="Content">
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="01">01</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="02">02</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="03">03</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="04">04</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="05">05</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="06">06</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="07">07</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="08">08</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="09">09</ComboBoxItem>
                                <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="10">10</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="0">
                            <Button x:Name="btnReadQrCode" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Read QR CODE</TextBlock>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="1">
                            <Button x:Name="btnTurning" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Turning</TextBlock>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="2">
                            <Button x:Name="btnForcus" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Padding="2,0,0,0">Forcus</TextBlock>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="#FFB9EAEA">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   FontSize="25"
                   Style="{StaticResource LabelHeader}"
                   Background="#FF74A8A1"
                   FontFamily="Elephant">MENU</Label>
            <Grid Grid.Row="1">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_DELAY_TIME">
                    <local:ButtonMechanical.Content>DELAY TIME</local:ButtonMechanical.Content>
                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="2">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_DEVICE">
                    <local:ButtonMechanical.Content>DEVICE</local:ButtonMechanical.Content>

                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="3">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_AOI">
                    <local:ButtonMechanical.Content>MES</local:ButtonMechanical.Content>
                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="4">
                <local:ButtonMechanical Background="#FF70E6E6" DeviceButton="PAGE_MENU_MECHANICAL_BARCODE">
                    <local:ButtonMechanical.Content>BARCODE</local:ButtonMechanical.Content>
                    <local:ButtonMechanical.Style>
                        <Style TargetType="local:ButtonMechanical">
                            <Setter Property="RectangleFill" Value="DarkRed" />
                        </Style>
                    </local:ButtonMechanical.Style>
                </local:ButtonMechanical>
            </Grid>
        </Grid>
    </Grid>
</Page>

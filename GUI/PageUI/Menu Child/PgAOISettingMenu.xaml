<Page x:Class="GUI.PgAOISettingMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      xmlns:device="clr-namespace:DevicePLC;assembly=DevicePLC"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1300"
      Title="PgMechanicalMenu">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFB3FBFB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style x:Key="lableName" TargetType="Label">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
            <Style x:Key="lableNo" TargetType="Label">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
            <Style x:Key="lableType" TargetType="Label">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
            <Style x:Key="lableUnit" TargetType="Label">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
        </Grid.Resources>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF29E8DF" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="70"></ColumnDefinition>
                    <ColumnDefinition Width="70"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="MES SETTING" 
                       Style="{StaticResource LabelHeader}"
                       HorizontalContentAlignment="Left"
                       FontFamily="Gill Sans Ultra Bold">
                    <Label.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Gray" Direction="315" BlurRadius="5" Opacity="0.7" />
                    </Label.Effect>
                </Label>
                <Button x:Name="btnSave" Grid.Column="1" HorizontalContentAlignment="Center" BorderThickness="1" BorderBrush="Transparent" Background="Transparent" VerticalContentAlignment="Center">
                    <Image Source="/Resource/Image/menu-save.png"></Image>
                </Button>
                <Button x:Name="btnRestore" Grid.Column="2" HorizontalContentAlignment="Center" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center">
                    <Image Source="/Resource/Image/continue.png"></Image>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid Grid.Column="0" Margin="2,0,2,0" Name="gridLeft">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="2.5*"></RowDefinition>
                            <RowDefinition Height="4.5*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Border Background="White" Grid.Row="0" BorderThickness="1" BorderBrush="#bbbbbb" MinHeight="60">
                            <TextBlock Grid.Column="0" Foreground="#FF0F53BE" FontSize="24" FontWeight="Bold" FontStyle="Italic" 
                            Margin="20,0,0,0" VerticalAlignment="Center">
                    Server Interface
                            </TextBlock>
                        </Border>

                        <GroupBox Grid.Row="1" Foreground="White" Header="[Handler Setting]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="2,0,2,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1.5*"/>
                                        <RowDefinition Height="1.5*"/>
                                        <RowDefinition Height="2*"/>
                                    </Grid.RowDefinitions>


                                    <Border Grid.Row="0" Background="DarkRed">
                                        <TextBlock  Foreground="White" FontSize="20"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">Handler IP/Port</TextBlock>
                                    </Border>
                                    <Border Grid.Row="1" BorderThickness="1" BorderBrush="#aaaaaa">
                                        <Grid>
                                            <Grid.Resources>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="24"/>
                                                    <Setter Property="BorderThickness" Value="0" />
                                                </Style>
                                            </Grid.Resources>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="3*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox Grid.Column="0" Name="txtLocalIp1">192</TextBox>
                                            <TextBox Grid.Column="1" IsReadOnly="True" TabIndex="-1">.</TextBox>
                                            <TextBox Grid.Column="2" Name="txtLocalIp2">168</TextBox>
                                            <TextBox Grid.Column="3" IsReadOnly="True" TabIndex="-1">.</TextBox>
                                            <TextBox Grid.Column="4" Name="txtLocalIp3">72</TextBox>
                                            <TextBox Grid.Column="5" IsReadOnly="True" TabIndex="-1">.</TextBox>
                                            <TextBox Grid.Column="6" Name="txtLocalIp4">100</TextBox>
                                        </Grid>
                                    </Border>
                                    <Border Grid.Row="2" BorderThickness="1" BorderBrush="#aaaaaa">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="4*"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0" Background="Gray" Foreground="White" Padding="0,0,0,0"
                                       FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center">Port</Label>
                                            <TextBox Grid.Column="1" Name="txtLocalPort" FontSize="24" BorderThickness="0"
                                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center">5010</TextBox>
                                        </Grid>
                                    </Border>
                                    <Grid Grid.Row="3" Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label Background="Gray" FontWeight="Bold" Foreground="White" FontSize="20" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">EQUIMENT ID</Label>
                                        <TextBox x:Name="txtEquiment" Margin="3,0,0,0" Background="White" FontWeight="Bold" Foreground="Black" FontSize="20" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">EQUIMENT ID</TextBox>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="1" Margin="2,0,2,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1.5*"/>
                                        <RowDefinition Height="1.5*"/>
                                        <RowDefinition Height="2*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Background="DarkRed">
                                        <TextBlock  Foreground="White" FontSize="20"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">Connection</TextBlock>
                                    </Border>
                                    <Border Grid.Row="1" BorderThickness="1" BorderBrush="#aaaaaa">
                                        <UniformGrid Columns="2">
                                            <UniformGrid.Resources>
                                                <Style TargetType="CheckBox">
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="20"/>
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </Style>
                                            </UniformGrid.Resources>
                                            <CheckBox x:Name="chkListen" Foreground="White">Listen</CheckBox>
                                            <CheckBox Foreground="White" x:Name="chkAccepted">Accepted</CheckBox>
                                            <!--<Rectangle Fill="Gray" Width="20" Height="20" 
                                           Margin="10,5,10,5" HorizontalAlignment="Left"/>
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20">Listen</TextBlock>
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="20">Accpeted</TextBlock>
                                <Rectangle Fill="Gray" Width="20" Height="20" 
                                           Margin="10,5,10,5" HorizontalAlignment="Right"/>-->
                                        </UniformGrid>
                                    </Border>

                                    <UniformGrid Grid.Row="2" Columns="2">
                                        <Button x:Name="btOpen"  FontSize="20" FontWeight="Bold" 
                                    Margin="0,2,10,2">Open</Button>
                                        <Button x:Name="btClose"  FontSize="20" FontWeight="Bold" 
                                    Margin="10,2,0,2">Close</Button>
                                    </UniformGrid>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60*"/>
                                <ColumnDefinition Width="40*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" Name="txtLog" Background="Black" Foreground="White"
                         HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"></TextBox>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="6*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Margin="2" FontSize="18" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="DarkGray" Content="Bin code OK"></Label>
                                    <TextBox Grid.Column="1" x:Name="txtBincodeOK" Margin="2,2,200,2" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White">0</TextBox>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Margin="2" FontSize="18" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="DarkGray" Content="Bin code NG"></Label>
                                    <TextBox Grid.Column="1" x:Name="txtBincodeNG" Margin="2,2,200,2" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White">1</TextBox>
                                </Grid>
                            </Grid>
                        </Grid>

                        <Border Grid.Row="3" BorderBrush="#aaaaaa" BorderThickness="1">
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="FontSize" Value="20"/>
                                        <Setter Property="Margin" Value="5,2,5,2"/>
                                    </Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Margin" Value="0,2,0,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <TextBox Grid.Row="0" Grid.Column="0" x:Name="txtTxData001"
                             Text="XBND002  M002">
                                </TextBox>
                                <Button x:Name="btSend001" Grid.Row="0" Grid.Column="1">Send</Button>

                                <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtTxData011"
                             Text="XBND002  M031P91101;GWL020500E9PTM94A;P91101">
                                </TextBox>
                                <Button x:Name="btSend031" Grid.Row="1" Grid.Column="1">Send</Button>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="#FFB9EAEA">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   FontSize="25"
                   Style="{StaticResource LabelHeader}"
                   Background="#FF74A8A1"
                   FontFamily="Elephant">MENU</Label>
            <Grid Grid.Row="1">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_DELAY_TIME">
                    <local:ButtonMechanical.Content>DELAY TIME</local:ButtonMechanical.Content>
                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="2">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_DEVICE">
                    <local:ButtonMechanical.Content>DEVICE</local:ButtonMechanical.Content>

                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="3">
                <local:ButtonMechanical Background="#FF70E6E6" DeviceButton="PAGE_MENU_MECHANICAL_AOI">
                    <local:ButtonMechanical.Content>MES</local:ButtonMechanical.Content>
                    <local:ButtonMechanical.Style>
                        <Style TargetType="local:ButtonMechanical">
                            <Setter Property="RectangleFill" Value="DarkRed" />
                        </Style>
                    </local:ButtonMechanical.Style>
                </local:ButtonMechanical>
            </Grid>
            <Grid Grid.Row="4">
                <local:ButtonMechanical Background="White" DeviceButton="PAGE_MENU_MECHANICAL_BARCODE">
                    <local:ButtonMechanical.Content>BARCODE</local:ButtonMechanical.Content>

                </local:ButtonMechanical>
            </Grid>
        </Grid>
    </Grid>
</Page>

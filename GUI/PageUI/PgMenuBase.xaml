<Page x:Class="GUI.PgMenuBase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1280"
      Title="PgMenuBase">

    <Grid Background="#FFF5F9F6">
        <Grid Height="120" VerticalAlignment="Top">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF29E8DF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Background" Value="#dddddd" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="BorderBrush" Value="#cccccc" />
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="FontSize" Value="28" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="0">
                <TextBlock FontFamily="Bernard MT Condensed" FontWeight="Bold" Foreground="White" FontSize="40">Main Menu</TextBlock>
            </Border>
            <Border BorderThickness="0" Grid.Column="1">
                <Grid Grid.Column="2" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Margin="15,0,0,5" Background="#43a34d" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                        <Label Grid.Row="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="#EEEEEE" Content="  User Login  " FontSize="10"></Label>
                    </Border>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="4*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label  Foreground="White" Margin="0,0,0,2" Grid.Row="0" Grid.Column="0" Width="100" Background="Transparent" FontSize="17" FontWeight="Bold" FontFamily="Times New Roman">ID</Label>
                        <Label Foreground="White" Margin="0,0,0,2" Grid.Row="1" Grid.Column="0" Width="100" Background="Transparent" FontSize="17" FontWeight="Bold" FontFamily="Times New Roman">Time</Label>
                        <Label Background="White"  x:Name="txtID" FontSize="12" FontWeight="Bold" Margin="0,0,6,2"  Grid.Row="0" Grid.Column="1" BorderThickness="1">SUPPER USER</Label>
                        <Label Background="White"  Margin="0,0,6,2" FontSize="12" FontWeight="Bold" x:Name="txtTime"  Grid.Row="1" Grid.Column="1"  BorderThickness="1">2023-11-03</Label>
                    </Grid>

                </Grid>
            </Border>
            <Border Grid.Column="3" BorderThickness="0">
                <Button Width="100" Background="Transparent" x:Name="btLogin" >
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Resource/Image/login2.png" Height="64"/>
                        <TextBlock FontFamily="Bernard MT Condensed" FontSize="40" Foreground="White">Log In</TextBlock>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>

        </Grid>

        <UniformGrid Columns="2" Rows="4" Margin="150,150,150,50" Height="600">
            <UniformGrid.Resources>
                <Style TargetType="{x:Type Button}" >
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Background" Value="#dddddd" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="FontSize" Value="40" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="10,10,10,10" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontSize" Value="40" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </UniformGrid.Resources>

            <Button x:Name="btTeaching">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resource/Image/menu-grid.png"/>
                    <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" VerticalAlignment="Center" Width="300"  Padding="20,0,0,0"><Run Text="Teaching Menu"/></TextBlock>
                    <Image x:Name="imgLockTeachingMenu" Margin="0,0,0,0" Height="50" Source="/Resource/Image/Lock.png"/>
                </StackPanel>
            </Button>
            <Button x:Name="btMechanical">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resource/Image/menu-mechanic.png"/>
                    <TextBlock FontFamily="Bernard MT Condensed" Width="300" Foreground="White" VerticalAlignment="Center" Padding="20,0,0,0">Mechanical Menu</TextBlock>
                    <Image x:Name="imgMechanicalMenu" Margin="0,0,0,0" Height="50" Source="/Resource/Image/Lock.png"></Image>
                </StackPanel>
            </Button>
            <Button x:Name="btSystem">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resource/Image/menu-system.png"/>
                    <TextBlock FontFamily="Bernard MT Condensed" Width="300" Foreground="White" VerticalAlignment="Center" Padding="20,0,0,0">System Menu</TextBlock>
                    <Image x:Name="imgSystemMenu" Margin="0,0,0,0" Height="50" Source="/Resource/Image/Lock.png"></Image>
                </StackPanel>
            </Button>
            <Button x:Name="btManual">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resource/Image/menu-manual.png"/>
                    <TextBlock FontFamily="Bernard MT Condensed" Width="300" Foreground="White" VerticalAlignment="Center" Padding="20,0,0,0">Manual Operation</TextBlock>
                    <Image x:Name="imgManualMenu" Margin="0,0,0,0" Height="50" Source="/Resource/Image/Lock.png"></Image>
                </StackPanel>
            </Button>
            <Button x:Name="btStatus">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resource/Image/menu-status.png"/>
                    <TextBlock FontFamily="Bernard MT Condensed" Foreground="White" Width="300" VerticalAlignment="Center" Padding="20,0,0,0">Status Menu</TextBlock>
                    <Image x:Name="imgStatusMenu" Margin="0,0,0,0" Height="50" Source="/Resource/Image/Lock.png"></Image>
                </StackPanel>
            </Button>
            <Button x:Name="btLoadSave">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resource/Image/menu-save.png"/>
                    <TextBlock FontFamily="Bernard MT Condensed" Width="300" Foreground="White" VerticalAlignment="Center" Padding="20,0,0,0">MODEL</TextBlock>
                    <Image x:Name="imgModelMenu" Margin="0,0,0,0" Height="50" Source="/Resource/Image/Lock.png"></Image>
                </StackPanel>
            </Button>
            <Button x:Name="btSuperUser">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resource/Image/menu-admin.png"/>
                    <TextBlock FontFamily="Bernard MT Condensed" Width="300" Foreground="White" VerticalAlignment="Center" Padding="20,0,0,0">Super User Menu</TextBlock>
                    <Image x:Name="imgSupperUserMenu" Margin="0,0,0,0" Height="50" Source="/Resource/Image/Lock.png"></Image>
                </StackPanel>
            </Button>
            <Button x:Name="btAssign">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF3BA6F0" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resource/Image/assign.png"/>
                    <TextBlock FontFamily="Bernard MT Condensed" Width="300" Foreground="White" VerticalAlignment="Center" Padding="20,0,0,0">Assign Menu</TextBlock>
                    <Image x:Name="imgAssignMenu" Margin="0,0,0,0" Height="50" Source="/Resource/Image/Lock.png"></Image>
                </StackPanel>
            </Button>

        </UniformGrid>
    </Grid>
</Page>

<Page x:Class="GUI.PgIO"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1300"
      Title="PgIO">

    <Grid Background="#FF383838">
        <Grid.Resources>
            <Style TargetType="Button" x:Key="ButtonHeader">
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="BorderBrush" Value="Black"></Setter>
                <Setter Property="BorderThickness" Value="1"></Setter>
                <Setter Property="Padding" Value="5"></Setter>
            </Style>
            <Style TargetType="Label" x:Key="LabelHeader">
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="BorderBrush" Value="Black"></Setter>
                <Setter Property="BorderThickness" Value="1"></Setter>
                <Setter Property="Padding" Value="5"></Setter>
            </Style>
            <Style TargetType="Label" x:Key="LabelListView">
                <Setter Property="Background" >
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#FFAC9D57" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontStyle" Value="Italic"/>
                <Setter Property="FontFamily" Value="Simplex" />
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Margin" Value="1,0,1,0"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Label Content="MODEL TYPE: INPUT 32 POINT" 
                       Style="{StaticResource LabelHeader}"
                       FontFamily="Gill Sans Ultra Bold">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF29E8DF" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                    <Label.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Gray" Direction="315" BlurRadius="5" Opacity="0.7" />
                    </Label.Effect>
                </Label>
            </Grid>
            <Grid Grid.Row="1"> 
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" x:Name="gridButtonIO" Background="#FF79C5B7"></Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"  Style="{StaticResource LabelListView}">Status</Label>
                        <Label Grid.Column="1"  Style="{StaticResource LabelListView}">Device</Label>
                        <Label Grid.Column="2"  Style="{StaticResource LabelListView}">Description</Label>
                        <Label Grid.Column="3"  Style="{StaticResource LabelListView}">Status</Label>
                        <Label Grid.Column="4"  Style="{StaticResource LabelListView}">Device</Label>
                        <Label Grid.Column="5"  Style="{StaticResource LabelListView}">Description</Label>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" x:Name="gridStatus1"></Grid>
                        <Grid Grid.Column="1" x:Name="gridDevice1"></Grid>
                        <Grid Grid.Column="2" x:Name="gridDescription1"></Grid>
                        <Grid Grid.Column="3" x:Name="gridStatus2"></Grid>
                        <Grid Grid.Column="4" x:Name="gridDevice2"></Grid>
                        <Grid Grid.Column="5" x:Name="gridDescription2"></Grid>
                    </Grid>
                   
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="#FF5D7874">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   FontSize="25"
                   Style="{StaticResource LabelHeader}"
                   Background="#FF74A8A1"
                   FontFamily="Elephant">MENU</Label>
            <Button Grid.Row="1" Margin="1,1,1,1"
                    Style="{StaticResource ButtonHeader}"
                    FontSize="20">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="15" Height="48" Fill="DarkRed" />
                    <TextBlock VerticalAlignment="Center" Padding="10,0,0,0"><Run Text="INPUT    "/></TextBlock>
                </StackPanel>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF3399FF" Offset="0"/>
                        <GradientStop Color="#FF0055AA" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="2" Margin="1,1,1,1"
                    Style="{StaticResource ButtonHeader}"
                    FontSize="20">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="15" Height="48" Fill="DarkRed" />
                    <TextBlock VerticalAlignment="Center" Padding="10,0,0,0">OUTPUT</TextBlock>
                </StackPanel>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF3399FF" Offset="0"/>
                        <GradientStop Color="#FF0055AA" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Page>

<Page x:Class="GUI.PgLastAlarm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1300"
      Title="PgLastAlarm">

    <Grid Background="#FFF9F9F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="2,0,2,0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="13*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="25" Content="Last Jam">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FFE8E3E3" Offset="0.593"/>
                            <GradientStop Color="#FFC9B9B9" Offset="0.377"/>
                            <GradientStop Color="#FF9B9696" Offset="0.311"/>
                            <GradientStop Color="#FFC9B9B9" Offset="0.379"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1" Background="#FFB5BFBF">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="0.5*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#FFD6E6E6" Margin="3">
                            <Border CornerRadius="8" BorderThickness="1" BorderBrush="Black">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition ></RowDefinition>
                                        <RowDefinition Height="4*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Border Margin="15,0,0,0" Background="#FF3DFF72" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                            <StackPanel>
                                                <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="Black" Content="Alarm Infor." FontSize="15" Width="135"></Label>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition Width="2*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">Time</Label>
                                        <Label Grid.Row="1" Grid.Column="0" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">Code</Label>
                                        <Label Grid.Row="2" Grid.Column="0" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">SEQ ID</Label>
                                        <Label Grid.Row="3" Grid.Column="0" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">Mode</Label>

                                        <Label x:Name="lblTime" Margin="2" BorderBrush="Gray" BorderThickness="1" Grid.Row="0" Grid.Column="1" Background="Black" Foreground="LightGreen" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">2023-11-23 09:09:00</Label>
                                        <Label x:Name="lblCode" Margin="2" BorderBrush="Gray" BorderThickness="1" Grid.Row="1" Grid.Column="1" Background="White" Foreground="Blue" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">02145</Label>
                                        <Label x:Name="lblSeqId" Margin="2" BorderBrush="Gray" BorderThickness="1" Grid.Row="2" Grid.Column="1" Background="White" Foreground="Blue" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">2</Label>
                                        <Label x:Name="lblMode" Margin="2" BorderBrush="Gray" BorderThickness="1"  Grid.Row="3" Grid.Column="1" Background="White" Foreground="Blue" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">AUTO</Label>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                        </Grid>
                        <Grid Grid.Row="1" Background="#FFD6E6E6" Margin="3">
                            <Border CornerRadius="8" BorderThickness="1" BorderBrush="Black">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition ></RowDefinition>
                                        <RowDefinition Height="4*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Border Margin="15,0,0,0" Background="#FF3DFF72" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                            <StackPanel>
                                                <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="Black" Content="Alarm Position." FontSize="15" Width="135"></Label>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label Margin="4" Grid.Row="0" Grid.Column="0" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF3D8383">1</Label>
                                        <Label Margin="4" Grid.Row="0" Grid.Column="1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF3D8383">2</Label>
                                        <Label Margin="4" Grid.Row="0" Grid.Column="2" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF3D8383">3</Label>
                                        <Label Margin="4" Grid.Row="1" Grid.Column="0" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF3D8383">4</Label>
                                        <Label Margin="4" Grid.Row="1" Grid.Column="1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF3D8383">5</Label>
                                        <Label Margin="4" Grid.Row="1" Grid.Column="2" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF3D8383">6</Label>
                                    </Grid>
                                </Grid>
                            </Border>

                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Margin="2">
                    <Border CornerRadius="8" BorderThickness="1" Background="#FFEBECEC" BorderBrush="Black">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition Height="3*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Border Margin="15,0,0,0" Background="Red" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                    <StackPanel>
                                        <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="White" Content="Alarm Message." FontSize="15" Width="135"></Label>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            <Label Background="White" Grid.Row="1" FontSize="16" Margin="5,2,6,5">
                                <TextBlock x:Name="lblMessage" Text="[ROBOT] The position button is not pressed for a long time, so it automatically changes to the stop mode"></TextBlock>
                            </Label>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Row="2" Margin="2">
                    <Border CornerRadius="8" BorderThickness="1" Background="#FFEBECEC" BorderBrush="Black">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition Height="3*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Border Margin="15,0,0,0" Background="Blue" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                    <StackPanel>
                                        <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="White" Content="Solution Message." FontSize="15" Width="135"></Label>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            <Label Background="White" Grid.Row="1" FontSize="16" Margin="5,2,6,5">
                                <TextBlock x:Name="lblSolution" Text="[ROBOT] The position button is not pressed for a long time, so it automatically changes to the stop mode"></TextBlock>
                            </Label>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Margin="2,0,2,0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="13*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25" Content="Last Jam">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FFE8E3E3" Offset="0.593"/>
                            <GradientStop Color="#FFC9B9B9" Offset="0.377"/>
                            <GradientStop Color="#FF9B9696" Offset="0.311"/>
                            <GradientStop Color="#FFC9B9B9" Offset="0.379"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
            </Grid>
            <Grid Grid.Row="1">
                <UniformGrid Grid.Row="1" Name="ugridJamList" Rows="10">
                    <UniformGrid.Resources>
                        <Style TargetType="Button" x:Key="mButton">
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="DodgerBlue"/>
                        </Style>
                    </UniformGrid.Resources>
                </UniformGrid>
            </Grid>
        </Grid>
    </Grid>
</Page>

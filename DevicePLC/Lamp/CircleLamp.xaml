<UserControl x:Class="DevicePLC.CircleLamp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevicePLC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType=UserControl}}"
             x:Name="userControlCircleLamp">
    <Grid>
        <Ellipse
            x:Name="cir" 
            Fill="{Binding Fill, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Stroke="#FF57B5D1"
            StrokeThickness="2">
        </Ellipse>
        <TextBlock Text="YourText" 
                   FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   x:Name="txt"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" />
    </Grid>
</UserControl>

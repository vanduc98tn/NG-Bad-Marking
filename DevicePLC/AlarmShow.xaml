<Window x:Class="DevicePLC.AlarmShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevicePLC"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="#dddddd" BorderThickness="2" BorderBrush="Yellow"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="WndAlarmShow" Height="700" Width="600" ShowInTaskbar="False">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.013"/>
                <GradientStop Color="#FFE6C945" Offset="0.147"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="1.9*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="270"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label VerticalContentAlignment="Center" Foreground="White" FontSize="20" FontWeight="Bold">Error Message</Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0" Margin="2">
                <Label Background="#FF96B9B6" FontWeight="Bold" VerticalContentAlignment="Center" FontSize="16" HorizontalContentAlignment="Center">Time</Label>
            </Grid>
            <Grid Margin="2" Grid.Row="1" Grid.Column="0">
                <Label Background="#FF96B9B6" FontWeight="Bold" VerticalContentAlignment="Center" FontSize="16" HorizontalContentAlignment="Center">Code</Label>
            </Grid>
            <Grid Margin="2" Grid.Row="2" Grid.Column="0">
                <Label Background="#FF96B9B6" FontWeight="Bold" VerticalContentAlignment="Center" FontSize="16" HorizontalContentAlignment="Center">SEQID</Label>
            </Grid>
            <Grid Margin="2" Grid.Row="0" Grid.Column="1">
                <Label x:Name="lblTime" Background="Black" Foreground="LightGreen" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Time</Label>
            </Grid>
            <Grid Margin="2" Grid.Row="1" Grid.Column="1">
                <Label x:Name="lblCode" BorderBrush="Black" BorderThickness="1" Background="White" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">12345</Label>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="2">
                    <Label x:Name="lblSeqId" BorderThickness="1" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" Background="White">11</Label>
                </Grid>
                <Grid Grid.Column="1" Margin="2">
                    <Label Background="#FF96B9B6" BorderThickness="1" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16">Mode</Label>
                </Grid>
                <Grid Grid.Column="2" Margin="2">
                    <Label x:Name="lblMode" BorderThickness="1" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" Background="White">AUTO</Label>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="2">
                <Border CornerRadius="8" BorderThickness="1" Background="#FF766E6E" BorderBrush="Black">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition Height="3*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Border Margin="15,0,0,0" Background="Red" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                <StackPanel>
                                    <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="White" Content="Alarm Message." FontSize="15" Width="135"></Label>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <Label Background="White" Grid.Row="1" FontSize="16" Margin="5,2,6,5">
                            <TextBlock x:Name="lblMessage" Text="[ROBOT] The position button is not pressed for a long time, so it automatically changes to the stop mode"></TextBlock>
                        </Label>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Row="1" Margin="2">
                <Border CornerRadius="8" BorderThickness="1" Background="#FF766E6E" BorderBrush="Black">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition Height="3*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Border Margin="15,0,0,0" Background="Blue" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                <StackPanel>
                                    <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="White" Content="Solution Message." FontSize="15" Width="135"></Label>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <Label Background="White" Grid.Row="1" FontSize="16" Margin="5,2,6,5">
                            <TextBlock x:Name="lblSolution" Text="[ROBOT] The position button is not pressed for a long time, so it automatically changes to the stop mode"></TextBlock>
                        </Label>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Canvas x:Name="canvas">
                <Canvas.Resources>
                    <Style TargetType="Ellipse">
                        <Setter Property="Stroke" Value="Red"/>
                        <Setter Property="StrokeThickness" Value="2"/>
                        <Setter Property="Fill" Value="Transparent"/>
                    </Style>
                </Canvas.Resources>
            </Canvas>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <local:PLCButton  Content=""
                                  x:Name="plcButtonBuzzer"
                                  IsShowInWindow="True"
                                  UseLampCodition="True" 
                                  Background="Transparent"
                                  BackgroundLampOFF="Transparent" 
                                  BackgroundLampON="Transparent" 
                                  UseImage="True" 
                                  ImageOFF="/Resource/Image/silent.png" 
                                  ImageON="/Resource/Image/sound.png">
                    <local:PLCButton.ImageSource>
                        <BitmapImage UriSource="/DevicePLC;component/Resource/Image/sound.png"/>
                    </local:PLCButton.ImageSource>
                </local:PLCButton>
            </Grid>
            <Button x:Name="btnClose" Grid.Column="1" Width="120" BorderThickness="1" BorderBrush="Blue" FontSize="25" FontWeight="Bold" Content="Close">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FFFFFF58" Offset="0.547"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Window>
